package com.revshop.main;

import com.revshop.service.SellerService;
import com.revshop.service.UserService;

import java.util.Scanner;

public class RevShopApp {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        UserService userService = new UserService();
        SellerService sellerService = new SellerService();

        while (true) {
            System.out.println("\n===== REVSHOP =====");
            System.out.println("1. Register");
            System.out.println("2. Login");
            System.out.println("3. Exit");
            System.out.print("Choice: ");

            int choice = Integer.parseInt(sc.nextLine());

            switch (choice) {
                case 1:
                    userService.register(sc);
                    break;

                case 2:
                    int userId = userService.login(sc);
                    if (userId != -1) {
                        String role = userService.getRoleByUserId(userId);
                        if ("SELLER".equalsIgnoreCase(role)) {
                            sellerService.sellerMenu(userId, sc);
                        } else {
                            System.out.println("Customer login success");
                        }
                    }
                    break;

                case 3:
                    System.out.println("Bye!");
                    return;
            }
        }
    }
}
