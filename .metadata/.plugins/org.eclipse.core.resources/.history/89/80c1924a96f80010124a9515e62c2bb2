package com.revshop.service;

import com.revshop.dao.UserDAO;
import com.revshop.dao.ProductDAO;

public class UserService {
    UserDAO userDAO=new UserDAO();

    public boolean register(String name, String email, String password, String role, String hint) {
        return userDAO.register(name,email,password,role,hint);
    }
    public boolean login(String email,String password){ return userDAO.login(email,password); }
    public boolean changePassword(String email,String newPwd){ return userDAO.changePassword(email,newPwd); }
}

public class ProductService {
    ProductDAO productDAO=new ProductDAO();
    public void viewProducts(){ productDAO.viewAllProducts(); }
}

